        <!-- Time -->
        <p id="demo" class="time"></p>

        <!-- Login and Signup Buttons -->
        <nav class="nav">
            {{#unless isLoggedIn}}
                <a href="/login" class="btn login-btn">Login</a>
                <a href="/signup" class="btn signup-btn">Sign Up</a>
            {{/unless}}
            <!-- Logout button -->
            {{#if isLoggedIn}}
                <a href="/logout" class="btn logout-btn">Logout</a>
            {{/if}}
        </nav>
    </div>
</header>
<script>
    // Display time
    const d = new Date();
    const options = {
        hour: '2-digit',
        minute: '2-digit',
        hour12: true,
    };
    document.getElementById("demo").innerHTML = d.toLocaleTimeString('en-US', options);

    // Toggle the navigation menu on hamburger click
    const hamburger = document.getElementById("hamburger");
    const navMenu = document.getElementById("nav-menu");

    hamburger.addEventListener("click", () => {
        navMenu.classList.toggle("active");
    });
</script>
    <div class="modal-content">
        <h2>Login</h2>
        <form action="/login" method="post">
            {{!-- <label for="login-email">Email:</label> --}}
            <input type="email" id="login-email" name="email" placeholder="email" required>

            {{!-- <label for="login-password">Password:</label> --}}
            <input type="password" id="login-password" name="password" placeholder="password" required>

            <button type="submit" class="btn">Login</button>
        </form><br>
        <a href="/signup" style="display: block;" class="btn">create a new account</a>
    </div>
</body>
</html>